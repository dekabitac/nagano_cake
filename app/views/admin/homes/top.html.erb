<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-lg-1"></div>
      <div class= "col-lg-10">
        <div class= "col-lg-3">
          <h2 class= "table-secondary">注文履歴一覧</h2>
        </div>
        <table class= "table table-hover table-inverse">
          <thead class= "bg-light">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= link_to admin_order_path(order.id) do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                  <% end %>
                </td>
                <td>
                  <%= order.addressee %>
                </td>
                <td><%= order.order_detailes.sum(:amount) %></td>
                <td><%= order.order_status_i18n %></td>
              </tr>
            <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>