<main>

  <div class= "container">
    <div class= "row">
      <div class= "col-lg-12">
        <h2 class= "bg-light">商品編集</h2>
        <div class= "m-3">
          <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
          <table class= "table">
            <tr>
              <th><h4>商品画像</h4></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th><h4>商品名</h4></th>
              <td><%= f.text_field :product_name %></td>
            </tr>
            <tr>
              <th><h4>商品説明</h4></th>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <th><h4>ジャンル</h4></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: '-- 選択してください --' %></td>
            </tr>
            <tr>
              <th><h4>税抜価格</h4></th>
              <td><%= f.text_field :price %></td>
            </tr>
            <tr>
              <th><h4>販売ステータス</h4></th>
              <td>
                <%= f.radio_button :is_active, :true, checked: true %>
                <%= f.label :is_active, "販売中" %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売中止" %>
                <%= f.submit '変更を保存' %>
              </td>
            </tr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>









