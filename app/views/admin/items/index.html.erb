<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-lg-12">
        <div class= "col-lg-2">
          <h2 class= "table-secondary">商品一覧</h2>
        </div>
        <button class= "btn btn-success"><%= link_to "新規登録", new_admin_item_path, class: "text-white" %></button>
        <table class= "table table-hover table-inverse">
          <thead>
            <tr>
              <th class= "table-secondary">商品ID </th>
              <th class= "table-secondary">商品名</th>
              <th class= "table-secondary">税抜価格</th>
              <th class= "table-secondary">ジャンル</th>
              <th class= "table-secondary">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                <%= item.product_name %>
                <% end %>
              </td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.genre_name %></td>
              <td>
                <% if item.is_active == true %>
                 <div class= "text-success">販売中</div>
                <% else %>
                  <div class= "text-secondary">販売中止</div>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div><%= paginate @items %></div>
  </div>
</main>