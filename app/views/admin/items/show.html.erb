<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-md-4">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "300x300" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
      </div>
      <div class= "col-md-8">
        <h2>商品詳細</h2>
        <table class= "table">
          <thead>
            <tr>
              <th>商品名</th>
              <td><%= @item.product_name %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>商品説明</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.genre_name %></td>
            </tr>
            <tr>
              <th>税込価格（税抜価格）</th>
              <td><%= @item.price.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
                <% if @item.is_active == true %>
                  <div class= "text-success">販売中</div>
                <% else %>
                  <div class= "text-danger">販売中止</div>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
