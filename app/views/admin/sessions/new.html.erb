<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-lg-11">
        <div class= "col-lg-3"><h2 class= "table-secondary">管理者ログイン</h2></div>
        <div class= "d-flex justify-content-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class= "table-borderless">
            <tr>
              <th><%= f.label :メールアドレス %></th>
              <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
            </tr>
            <tr>
              <td><%= f.label :パスワード %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
            </tr>
          </table>
        <% end %>
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</main>