<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-md-12">
        <div class= "col-lg-3">
          <h2 class= "table-secondary">
            新規会員登録
          </h2>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <table class= "table">
            <tr>
              <th>名前</th>
              <th><%= f.label :"(姓)" %></th>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
              <th><%= f.label :"（名）" %></th>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <th><%= f.label :"（セイ）" %></th>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
              <th><%= f.label :"(メイ)" %></th>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th>郵便番号（ハイフンなし）</th>
              <td></td>
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td></td>
              <td><%= f.text_area :address, autofocus: true, autocomplete: "address" %></td>
            </tr>
            <tr>
              <th>電話番号（ハイフンなし）</th>
              <td></td>
              <td><%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
            </tr>
            <tr>
              <th>パスワード（6文字以上）</th>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <th>パスワード（確認用）</th>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <th></th>
              <td></td>
              <td>
                <%= f.submit "新規登録", class: "btn btn-success" %>
              </td>
            </tr>
          </table>
        <% end %>
        <tr>
          <th><h2>既に登録済みの方</h2></th>
          <td><p><%= link_to "こちら", customer_session_path %>からログインしてください</p></td>
        </tr>
      </div>
    </div>
  </div>
</main>

