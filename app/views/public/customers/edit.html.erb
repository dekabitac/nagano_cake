<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-md-12">
        <div class= "center-block">
          <h2>会員情報編集</h2>
          <%= form_with model: @customer, url: public_customer_path(@customer.id) do |f| %>
          <table class="table">
            <tr>
              <th>氏名</th>
              <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
              </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <th>郵便番号></th>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= f.submit'編集内容を保存', class: "btn btn-success" %>
                <%= link_to '退会する', customers_confirmation_public_customers_path, class: "btn btn-danger"%>
              </td>
            </tr>
          </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>