<main>
  <div class= "container px-5 px-sm-0">
    <div class= "row">
      <div class= "col-md-9">
        <h2 class="table-secondary">マイページ</h2>
          <thead>
            <tr>
              <th>登録情報</th>
              <td>
                <%= link_to'編集する', edit_public_customer_path(current_customer.id), class: "btn btn-success" %>
              </td>
            </tr>
          </thead>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="table-secondary">氏名</th>
                <td>
                  <%= @customer.last_name %>
                  <%= @customer.first_name %>
                </td>
              </tr>
              <tr>
                <th class="table-secondary">カナ</th>
                <td>
                  <%= @customer.last_name_kana %>
                  <%= @customer.first_name_kana %>
                </td>
              </tr>
              <tr>
                <th class="table-secondary">郵便番号</th>
                <td><%= @customer.postal_code %></td>
              </tr>
              <tr>
                <th class="table-secondary">住所</th>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <th class="table-secondary">電話番号</th>
                <td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <th class="table-secondary">メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
            </thead>
          </table>
          <table class= "table">
            <tbody>
              <tr>
                <th>配送先</th>
                <td>
                  <%= link_to '一覧を見る',public_addresses_path, class: "btn btn-primary"%><br>
                </td>
              </tr>
              <tr>
                <th>注文履歴</th>
                  <td>
                    <%= link_to '一覧をみる',public_orders_path, class: "btn btn-primary" %>
                  </td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>
